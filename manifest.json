{
  "author": "Jonathan Simcoe",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon-128.png",
    "default_title": "Pinboard"
  },
  "description": "A quick and easy way to send pages to Pinboard.in.",
  "homepage_url": "https://jdsimcoe.com/",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 3,
  "name": "Pinboard",
  "permissions": ["tabs", "windows"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "short_name": "Pinboard",
  "version": "1.1",
  "web_accessible_resources": [
    {
      "resources": ["close.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
